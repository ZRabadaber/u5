{
  "image": "localhost/stm32rust",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,Z,consistency=cached",
  "workspaceFolder": "/workspace",
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/../stm32u575",
      "target": "/workspace/stm32u575,Z",
      "type": "bind"
    }
  ],
  "runArgs": [
    "--cap-add=ALL",
    "--privileged",
    "--security-opt",
    "label=disable"
  ],
  // "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "label=disable", "--device=/dev/bus/usb", "--device=/dev/ttyACM0"],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "marus25.cortex-debug"
      ]
    }
  }
}